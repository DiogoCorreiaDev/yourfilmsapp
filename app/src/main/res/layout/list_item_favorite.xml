<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/rlSerieLine"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/serieCapa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="75"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/serieNome"
                style="@style/CellTextViewItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                />
            <TextView
                android:id="@+id/serieAno"
                style="@style/CellTextViewItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/serieStatus"
                style="@style/CellTextViewItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/serieRating"
                style="@style/CellTextViewItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/deleteFavorite"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:textSize="11dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorRed"
        android:text="Delete"/>
</LinearLayout>